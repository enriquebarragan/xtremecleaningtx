---
import "../styles/tailwind.css";

const {
  title = "Xtreme Cleaning | Luxury Residential & Commercial Cleaning in the Dallas-Fort Worth Metroplex",
  description = "Xtreme Cleaning delivers meticulous residential, commercial, and rental cleaning for discerning clients across the Dallas-Fort Worth Metroplex.",
  canonical = "https://www.xtremecleaningtx.com/",
  image = "https://dummyimage.com/1200x630/0a1f44/ffffff&text=Xtreme+Cleaning",
  structuredData = null,
} = Astro.props;

const baseUrl = "https://www.xtremecleaningtx.com";
const canonicalUrl = canonical ?? `${baseUrl}/`;
const ogImage = image.startsWith("http") ? image : `${baseUrl}${image}`;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0a1f44" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={canonicalUrl} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Sparkling clean kitchen maintained by Xtreme Cleaning" />
    <meta property="og:site_name" content="Xtreme Cleaning" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    {structuredData && (
      <script type="application/ld+json">
        {JSON.stringify(structuredData)}
      </script>
    )}
  </head>
  <body class="min-h-screen bg-brand-light font-sans text-slate-900 antialiased">
    <a
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-full focus:bg-brand-blue focus:px-4 focus:py-2 focus:text-white focus:shadow-lg"
      href="#main"
    >
      Skip to content
    </a>
    <header class="sticky inset-x-0 top-0 z-40 border-b border-brand-blue/10 bg-white/95 backdrop-blur">
      <div class="mx-auto flex w-full max-w-6xl flex-wrap items-center justify-between gap-4 px-6 py-4 sm:px-8">
        <a class="text-lg font-semibold text-brand-blue" href="/">Xtreme Cleaning</a>
        <nav aria-label="Primary navigation" class="order-3 w-full md:order-none md:w-auto">
          <ul class="flex flex-wrap items-center gap-x-6 gap-y-3 text-sm font-medium text-slate-600 md:text-base">
            <li><a class="hover:text-brand-blue" href="/services">Services</a></li>
            <li><a class="hover:text-brand-blue" href="/locations">Locations</a></li>
            <li><a class="hover:text-brand-blue" href="/process">How it Works</a></li>
            <li><a class="hover:text-brand-blue" href="/reviews">Reviews</a></li>
            <li>
              <a
                class="inline-flex items-center rounded-full bg-brand-blue px-4 py-2 text-white shadow-sm transition hover:bg-brand-blue/90"
                href="/contact"
              >
                Get a Quote
              </a>
            </li>
          </ul>
        </nav>
        <a class="order-2 text-sm font-semibold text-brand-blue md:order-none md:text-base" href="tel:+15125550198">
          (512) 555-0198
        </a>
      </div>
    </header>
    <main id="main">
      <slot />
    </main>
    <footer class="bg-brand-blue pt-16 pb-10 text-brand-light">
      <div class="mx-auto grid w-full max-w-6xl gap-12 px-6 sm:px-8 md:grid-cols-3">
        <div class="space-y-4">
          <h2 class="text-lg font-serif font-semibold text-white">About Xtreme Cleaning</h2>
          <p class="text-sm text-brand-light/80">
            We deliver meticulous residential and commercial cleaning across the Dallas-Fort Worth Metroplex. Our mission
            is to give you back your time with service you can trust.
          </p>
        </div>
        <div class="space-y-4">
          <h2 class="text-lg font-serif font-semibold text-white">Contact</h2>
          <ul class="space-y-2 text-sm">
            <li><a class="hover:text-white" href="tel:+15125550198">Call (512) 555-0198</a></li>
            <li><a class="hover:text-white" href="mailto:hello@xtemecleaningtx.com">hello@xtemecleaningtx.com</a></li>
            <li>Weekdays 8am - 6pm, Saturdays 9am - 2pm</li>
          </ul>
        </div>
        <div class="space-y-4">
          <h2 class="text-lg font-serif font-semibold text-white">Service Areas</h2>
          <ul class="space-y-2 text-sm">
            <li>Dallas</li>
            <li>Fort Worth</li>
            <li>Plano</li>
            <li>Frisco</li>
          </ul>
        </div>
      </div>
      <p class="mt-12 text-center text-xs text-brand-light/70">
        &copy; {new Date().getFullYear()} Xtreme Cleaning. All rights reserved.
      </p>
    </footer>
  </body>
</html>

