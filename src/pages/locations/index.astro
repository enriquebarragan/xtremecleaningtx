---
import Layout from "../../layouts/Layout.astro";
import { locations as locationList } from "../../data/locations.js";

const pageTitle = "Dallas-Fort Worth Cleaning Service Areas | Xtreme Cleaning";
const description =
  "Discover the Dallas-Fort Worth neighborhoods and cities covered by Xtreme Cleaning's luxury residential and commercial services.";
const canonical = "https://www.xtemecleaningtx.com/locations";
const image = "https://dummyimage.com/1200x630/0a1f44/ffffff&text=DFW+Locations";
---
<Layout title={pageTitle} description={description} canonical={canonical} image={image}>
  <section class="bg-white py-20">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <p class="text-xs font-medium uppercase tracking-[0.35em] text-brand-gold">Locations</p>
      <h1 class="mt-4 text-4xl font-serif font-semibold text-brand-blue">Serving the entire Dallas-Fort Worth Metroplex</h1>
      <p class="mt-6 max-w-3xl text-base text-slate-600">
        Our carefully vetted crews are based across DFW, delivering the same white-glove standards to luxury residences,
        corporate suites, hospitality venues, and specialty spaces. Explore in-depth coverage for your city.
      </p>
    </div>
  </section>

  <section class="bg-brand-blue/5 py-20">
    <div class="mx-auto grid w-full max-w-6xl gap-8 px-6 sm:px-8 md:grid-cols-2">
      {locationList.map((location) => (
        <article class="flex h-full flex-col rounded-3xl border border-brand-blue/10 bg-white p-8 shadow-glow">
          <h2 class="text-2xl font-serif font-semibold text-brand-blue">{location.name}</h2>
          <p class="mt-4 text-sm text-slate-600">{location.headline}</p>
          <p class="mt-4 text-sm text-slate-600">{location.intro}</p>
          <div class="mt-6">
            <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brand-gold">Neighborhoods we've served</p>
            <ul class="mt-3 grid gap-2 text-sm text-slate-600 sm:grid-cols-2">
              {location.neighborhoods.map((neighborhood) => (
                <li>{neighborhood}</li>
              ))}
            </ul>
          </div>
          <a class="mt-8 text-sm font-semibold text-brand-blue hover:text-brand-gold" href={`/locations/${location.slug}`}>
            Explore {location.name}
          </a>
        </article>
      ))}
    </div>
  </section>
</Layout>

