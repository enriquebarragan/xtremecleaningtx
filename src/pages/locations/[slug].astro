---
import Layout from "../../layouts/Layout.astro";
import { getLocationBySlug, getLocationPaths, locations as locationList } from "../../data/locations.js";
import { services as serviceList } from "../../data/services.js";

export function getStaticPaths() {
  return getLocationPaths();
}

const { slug } = Astro.params;
const location = getLocationBySlug(slug);

if (!location) {
  throw new Error(`Location not found for slug: ${slug}`);
}

const pageTitle = `${location.name} Cleaning Services | Xtreme Cleaning`;
const description = location.seoDescription;
const canonical = `https://www.xtemecleaningtx.com/locations/${location.slug}`;
const image = "https://dummyimage.com/1200x630/0a1f44/ffffff&text=DFW+Cleaning";
const nearbyLocations = locationList.filter((item) => item.slug !== location.slug).slice(0, 3);
---
<Layout title={pageTitle} description={description} canonical={canonical} image={image}>
  <section class="bg-white py-20">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <p class="text-xs font-medium uppercase tracking-[0.35em] text-brand-gold">Location</p>
      <h1 class="mt-4 text-4xl font-serif font-semibold text-brand-blue">{location.name}</h1>
      <p class="mt-6 text-base text-slate-600">{location.headline}</p>
      <p class="mt-4 text-sm text-slate-600">{location.intro}</p>
    </div>
  </section>

  <section class="bg-brand-blue/5 py-16">
    <div class="mx-auto grid w-full max-w-6xl gap-10 px-6 sm:px-8 lg:grid-cols-[minmax(0,0.7fr)_minmax(0,1.3fr)]">
      <div class="space-y-4">
        <h2 class="text-2xl font-serif font-semibold text-brand-blue">Neighborhoods we've served</h2>
        <ul class="grid gap-3 text-sm text-slate-600 sm:grid-cols-2">
          {location.neighborhoods.map((neighborhood) => (
            <li>{neighborhood}</li>
          ))}
        </ul>
      </div>
      <div class="space-y-4">
        <h2 class="text-2xl font-serif font-semibold text-brand-blue">Why residents choose Xtreme Cleaning</h2>
        <ul class="space-y-3 text-sm text-slate-600">
          {location.highlights.map((highlight) => (
            <li class="flex gap-3">
              <span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-brand-gold" aria-hidden="true" />
              <span>{highlight}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-brand-blue">Signature services for {location.name}</h2>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {serviceList.slice(0, 3).map((service) => (
          <article class="rounded-3xl border border-brand-blue/10 bg-brand-blue/5 p-6">
            <h3 class="text-lg font-serif font-semibold text-brand-blue">{service.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{service.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-brand-blue/5 py-16">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-brand-blue">Nearby DFW coverage</h2>
      <div class="mt-6 grid gap-4 sm:grid-cols-3">
        {nearbyLocations.map((item) => (
          <a class="rounded-3xl border border-brand-blue/10 bg-white p-4 text-sm font-semibold text-brand-blue hover:text-brand-gold" href={`/locations/${item.slug}`}>
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-brand-blue py-16 text-white">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-white">Request a DFW cleaning proposal</h2>
      <p class="mt-4 text-sm text-white/80">
        Share your address, access preferences, and project goals. We will build a tailored plan for your {location.name}
        property.
      </p>
      <div class="mt-6 flex flex-wrap gap-4">
        <a class="inline-flex items-center rounded-full bg-white px-5 py-3 text-sm font-semibold text-brand-blue shadow-glow transition hover:bg-brand-light" href="/">
          Start on the home page
        </a>
        <a class="inline-flex items-center rounded-full border border-white px-5 py-3 text-sm font-semibold text-white transition hover:bg-white/10" href="/contact">
          Contact Xtreme Cleaning
        </a>
      </div>
    </div>
  </section>
</Layout>
