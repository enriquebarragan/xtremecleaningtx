---
import Layout from "../../layouts/Layout.astro";
import { getServiceBySlug, getServicePaths, services as serviceList } from "../../data/services.js";

export function getStaticPaths() {
  return getServicePaths();
}

const { slug } = Astro.params;
const service = getServiceBySlug(slug);

if (!service) {
  throw new Error(`Service not found for slug: ${slug}`);
}

const pageTitle = `${service.title} | Xtreme Cleaning DFW`;
const description = service.seoDescription;
const canonical = `https://www.xtemecleaningtx.com/services/${service.slug}`;
const image = "https://dummyimage.com/1200x630/0a1f44/ffffff&text=Xtreme+Cleaning";
const relatedServices = serviceList.filter((item) => item.slug !== service.slug).slice(0, 3);
---
<Layout title={pageTitle} description={description} canonical={canonical} image={image}>
  <section class="bg-white py-20">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <p class="text-xs font-medium uppercase tracking-[0.35em] text-brand-gold">Service</p>
      <h1 class="mt-4 text-4xl font-serif font-semibold text-brand-blue">{service.title}</h1>
      <p class="mt-6 text-base text-slate-600">{service.description}</p>
      <div class="mt-8 grid gap-6 md:grid-cols-2">
        {service.longForm.map((paragraph) => (
          <p class="text-sm text-slate-600">{paragraph}</p>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-brand-blue/5 py-16">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-brand-blue">What is included</h2>
      <ul class="mt-6 space-y-3 text-sm text-slate-600">
        {service.checklist.map((item) => (
          <li class="flex gap-3">
            <span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-brand-gold" aria-hidden="true" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
      <div class="mt-8 rounded-3xl bg-white p-6 shadow-glow">
        <h3 class="text-lg font-serif font-semibold text-brand-blue">Tailor this service to your property</h3>
        <p class="mt-3 text-sm text-slate-600">
          Add-on options include laundry and linen service, product sourcing, pet-friendly supplies, speciality floor care,
          exterior refreshes, and vendor coordination for maintenance punch lists.
        </p>
        <a class="mt-4 inline-flex items-center text-sm font-semibold text-brand-blue hover:text-brand-gold" href="/contact">
          Start a custom proposal
        </a>
      </div>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-brand-blue">Popular pairings</h2>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {relatedServices.map((item) => (
          <article class="rounded-3xl border border-brand-blue/10 bg-brand-blue/5 p-6">
            <h3 class="text-lg font-serif font-semibold text-brand-blue">{item.title}</h3>
            <p class="mt-3 text-sm text-slate-600">{item.description}</p>
            <a class="mt-4 inline-flex items-center text-sm font-semibold text-brand-blue hover:text-brand-gold" href={`/services/${item.slug}`}>
              Learn more
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-brand-blue py-16 text-white">
    <div class="mx-auto w-full max-w-5xl px-6 sm:px-8">
      <h2 class="text-2xl font-serif font-semibold text-white">Book a walkthrough</h2>
      <p class="mt-4 text-sm text-white/80">
        Tell us about your Dallas'Fort Worth property and timeline. We will schedule a walkthrough and deliver a detailed
        proposal within 48 hours.
      </p>
      <div class="mt-6 flex flex-wrap gap-4">
        <a class="inline-flex items-center rounded-full bg-white px-5 py-3 text-sm font-semibold text-brand-blue shadow-glow transition hover:bg-brand-light" href="/">
          Return home
        </a>
        <a class="inline-flex items-center rounded-full border border-white px-5 py-3 text-sm font-semibold text-white transition hover:bg-white/10" href="/contact">
          Contact us
        </a>
      </div>
    </div>
  </section>
</Layout>
